{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Jekyll Site",
            "type": "node-terminal",
            "request": "launch",
            "command": "bundle exec jekyll serve --host 0.0.0.0 --port 4000 --livereload --livereload-port 35729",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Jekyll Site (Drafts)",
            "type": "node-terminal",
            "request": "launch",
            "command": "bundle exec jekyll serve --host 0.0.0.0 --port 4000 --livereload --livereload-port 35729 --drafts",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Jekyll Site (Incremental)",
            "type": "node-terminal",
            "request": "launch",
            "command": "bundle exec jekyll serve --host 0.0.0.0 --port 4000 --livereload --livereload-port 35729 --incremental",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Build Jekyll Site",
            "type": "node-terminal",
            "request": "launch",
            "command": "bundle exec jekyll build",
            "cwd": "${workspaceFolder}"
        }
    ]
}
